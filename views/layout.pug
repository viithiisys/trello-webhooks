doctype html
html
  head
    style.
      input[type=text], select, textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
      margin-top: 6px;
      margin-bottom: 16px;
      resize: vertical;
      }
      input[type=submit] {
      background-color: #607d8b ;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      }
      input[type=submit]:hover {
      background-color: #607d8b ;
      }
      .container {
      border-radius: 5px;
      background-color: #f2f2f2 ;
      padding: 20px;
      max-width:730px;
      margin-left:20%;
      }
      .well {
      max-width:730px;
      margin-left:20%;
      min-height: 20px;
      padding: 19px;
      margin-bottom: 20px;
      background-color: #f5f5f5 ;
      border: 1px solid #e3e3e3 ;
      border-radius: 4px;
      -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
      box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
      }
      .colorselect{
      background-color: #fff;"
      }
  body
    h1.well Resume Collection Form
    .container
      form(action='/layout', method='post')
        label(for='name') Name
          input#name(type='text', name='name', required='', placeholder='Name' , ng-model='data.name')
        label(for='email') Email
          input#email(type='text', name='email', required='', placeholder='Email address' , ng-model='data.email')
        label(for='phone') Phone
          input#phone(type='text', name='phone', required='', placeholder='Phone' , ng-model='data.phone')
        .col-sm-12
          .row
            .col-sm-6.form-group
              label(for='technology') Key Skills
              select#technology(name='technology' style='background-color:#fff' ng-model='data.technology')
                option(name='technology' selected='', disabled='', value='') Skills
                option(value='Node') Node
                option(value='Java') Java
                option(value='Angular') Angular
            .col-sm-6.form-group
              label(for='yearOfExperience') Work Experience
              select#yearOfExperience(name='yearOfExperience' style='background-color:#fff' ng-model='data.yearOfExperience')
                option(name='experience' selected='', disabled='', value='') Experience
                option(value='Fresher') Fresher
                option(value='1 Year') 1 Year
                option(value='1+ Year') 1+ Year
                option(value='2+ Year') 2+ Year
                option(value='3+ Year') 3+ Year
                option(value='4+ Year') 4+ Year
                option(value='5+ Year') 5+ Year
                option(value='6+ Year') 6+ Year
            input(type='submit', value='Submit')
